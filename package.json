{
  "name": "opt-out",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "prepare": "./node_modules/.bin/selenium-standalone install",
    "browser-test": "./node_modules/.bin/wdio ./test/wdio.conf.js",
    "test-serve": "npm start -- -p 3001",
    "test": "npm run build && npm-run-all -p -r test-serve browser-test",
    "dev": "next ./src",
    "start": "next start ./src",
    "build": "next build ./src && next export ./src",
    "deploy": "now src/out --name opt-out-eu --region bru",
    "clean": "rm -rf src/out && rm -rf src/.next",
    "alias:staging": "now alias opt-out-eu",
    "alias:prod": "now alias https://opt-out-eu.now.sh/ opt-out.eu && now alias https://opt-out-eu.now.sh/ www.opt-out.eu",
    "deploy:dev": "npm run clean && npm run build && npm run deploy"
  },
  "dependencies": {
    "@material-ui/core": "^1.2.1",
    "babel-plugin-react-intl": "^2.4.0",
    "downshift": "^1.31.15",
    "mailto-link": "^1.0.0",
    "next": "^6.0.1",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-intl": "^2.4.0",
    "universal-fetch": "^1.0.0"
  },
  "devDependencies": {
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "babel-runtime": "^6.26.0",
    "chai": "^4.1.2",
    "mailto-parser": "^1.0.1",
    "mocha": "^5.1.1",
    "npm-run-all": "^4.1.3",
    "selenium-standalone": "^6.14.0",
    "wdio-mocha-framework": "^0.5.13",
    "wdio-selenium-standalone-service": "0.0.10",
    "wdio-spec-reporter": "^0.1.4",
    "webdriverio": "^4.12.0"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "now": {
    "name": "opt-out-eu"
  }
}
